import sys
import time
import random
from turtle import clear


typing_speed = 75 #wpm
def slow_type(t):
    for l in t:
        sys.stdout.write(l)
        sys.stdout.flush()
        time.sleep(random.random()*10.0/typing_speed)



def Start():
    slow_type("welcome to your local subway\n1. Italian\n2. Wheat\n3. Italian Herbs + cheese\n4. Flatbread\n")
    answer1 = input()
    if answer1 == "1":
        choiceItalian()
    elif answer1 == "2":
        choiceWheat()



def choiceItalian():
    slow_type("you are going to italy\n")
    a2 = input("Will you go to Italy?\n1. No, I do not want to go to italy\n2. I will go to italy\n")

    if a2 == "1":
        slow_type("you win this time")
    else:
        print("YOU DIED")
        slow_type("\x1B[3myou went to italy\x1B[0m")

def choiceWheat():
    slow_type("basic choice, not good enough\n")
    a3 = input("1. Pick Again\n2. Leave Subway\n")
    if a3 == "1":
        Start()
    else:
        slow_type("As you walk out of the subway, you are hit by a speeding car.\n")
        time.sleep(1)
        print("YOU DIED\n")
        slow_type("\x1B[3myou were struck by a speeding car\x1B[0m")
        quit()


Start()