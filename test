from tkinter import *
import string
import random
import time
root = Tk()

def death1():
    print("YOU DIED")
    quit()

def text():
    print("sdhasdgsa")

def combat():
   
   randomLetter = random.choice(string.ascii_lowercase)
   print(randomLetter)
   root.after(5000, death1)
   root.withdraw
   a1 = input()
   if a1 == randomLetter:  
    root.after_cancel(root)
    root.destroy(root)
   randomLetter = random.choice(string.ascii_lowercase)
   print(randomLetter)
   root.after(5000, death1)
   root.withdraw
   a1 = input()
   if a1 == randomLetter:  
    root.after_cancel(root)  
    root.destroy(root)

combat()
   